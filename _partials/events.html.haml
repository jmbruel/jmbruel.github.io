---
layout: base
---
.panel.panel-default
  .panel-heading
    %h4 Ongoing events
  .panel-body
    %ul.list-unstyled
      - for event in site.events
        - if event.date >= Date.today
          %li(style="margin-bottom: 10px;")
            .title
              %a{:href => event.url}
                - if !event.title.empty?
                  #{event.title} (#{event.eventOrganization})
                - else
                  #{event.eventOrganization}
            %div
              #{event.location}
            %div
              #{event.date.strftime('%a %-d %B %Y')}
              #{'/'}
              #{event.datefin.strftime('%a %-d %B %Y')}
    .small.pull-right
      %a{:href => "https://github.com/jmbruel/jmbruel.github.io/blob/master/_config/events.yml"}
        Add event
      #{'/'}
      %a{:href => "archive/events.html"}
        Archive
